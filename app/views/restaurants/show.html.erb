<div class="container">

    <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
      </div>

      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Back to All restaurants", restaurants_path %></li>
      </ul>
    </div>
  </nav>

  <h1> <%= @restaurant.name %> </h1>

  <div class="information">
    <h2> Information </h2>
    <p> <strong> Address </strong>: <%= @restaurant.address %> </p>
    <p> <strong> Phone </strong>: <%= @restaurant.phone_number %> </p>
    <p> <strong> Style </strong> : <%= @restaurant.category.capitalize %> </p>
  </div>
  <br>
  <br>
  <div class="reviews">
    <h2>Reviews</h2>
    <% @restaurant.reviews.each do |review| %>
      <div class="comment">
        <p> <%= 'ðŸŒŸ' * review.rating %> </p>
        <p> <%= review.content %> </p>
      </div>
    <% end %>
  </div>

  <div class="add-review">
    <h3>Add a review </h3>
    <%=  simple_form_for [@restaurant, @review] do |f|%>
    <%= f.input :content, label: 'Comment' %>
    <%= f.input :rating %>
    <%= f.submit %>
    <% end %>
  </div>
</div>
